{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "allowJs": true,
    "skipLibCheck": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "jsx": "react-jsx",
    "outDir": "./dist",
    "declaration": true,
    "emitDeclarationOnly": true,
    "types": [
      "vite/client"
    ],
  },
  "include": [
    "yextssg.d.ts",
    "i18next-fs-backend.d.ts",
    "yext-sites-scripts",
    "index.ts",
    "server.ts",
    "entry-server.ts",
    "bin",
    "scripts"
  ],
  "exclude": [
    "node_modules"
  ]
}